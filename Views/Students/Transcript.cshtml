@model dynamic

<div class="row">
    @if(Model.Count == 0)
    {
        <h3 style="color: darkred">Ders seçiminiz onaylanmamıştır!</h3>
    }
    <div class="col-12">
        <h3>Transkript</h3>
        <div class="table-responsive table--no-card m-b-30">
            <table class="table table-borderless table-striped table-earning">
                <thead>
                    <tr>
                        <th>Ders İsmi</th>
                        <th>Dersin Öğretmeni</th>
                        <th>Ders Kredisi</th>
                        <th>Ders Tipi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (dynamic studentCourse in Model)
                    {
                        <tr>
                            <td>@studentCourse.CourseName</td>
                            <td>@studentCourse.TeacherName</td>
                            <td>@studentCourse.CourseCredit</td>
                            <td>@(studentCourse.CourseType == true ? "Zorunlu" : "Seçmeli")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
